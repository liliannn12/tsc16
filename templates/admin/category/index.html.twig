{% extends "base.html.twig" %}

{% block title %}Liste des catégories{% endblock %}

{% block body %}
    <div class="container my-5">
        <div class="row">
            {% include "_partials/adminnav.html.twig" %}
            <main class="col-9 border border-light bg-white p-2">
                <h1 class="mb-3">Liste des catégories</h1>
                <table class="table">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Description</th>
                            <th>Slug</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for categorie in category %}
                            <tr>
                                <td>{{ categorie.id }}</td>
                                <td>{{ categorie.name }}</td>
                                <td>{{ categorie.content }}</td>
                                <td>{{ categorie.slug }}</td>
                                <td>
                                 <a href="{{ path('admin_category_edit', {id: categorie.id}) }}" class="btn btn-success">Modifier</a>
                                <a href="{{ path('admin_category_delete', {id: categorie.id}) }}" class="btn btn-danger">Supprimer<a>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </main>
        </div>
    </div>
{% endblock %}