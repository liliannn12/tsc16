{% extends 'base.html.twig' %}

{% block title %}TSC 16 - Connexion{% endblock %}

{% block body %}
<section class="container my-5 py-5 text-dark">
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté comme {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Me déconnecter</a>
        </div>
    {% endif %}

    <h1 class="mb-5 fw-bold text-center">Me connecter</h1>
    <label for="inputEmail" class="mb-2 fs-4">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-4" autocomplete="email" required autofocus>
    <label for="inputPassword" class="mb-2 fs-4">Mot de passe</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">

    <button class="btn btn-lg btn-primary mt-5" type="submit">
        Connexion
    </button>
    <button class="btn btn-lg btn-danger mt-5" href="#">
        Mot de passe oublié
    </button>
</form>
</section>

{% endblock %}
